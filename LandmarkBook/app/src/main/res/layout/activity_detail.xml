<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="310dp"
        android:layout_height="304dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="77dp"
        app:layout_constraintBottom_toTopOf="@+id/landmarkNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/landmarkNameText"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="Landmark Text"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/landmarkCountryText"
        app:layout_constraintEnd_toEndOf="@+id/landmarkCountryText"
        app:layout_constraintStart_toStartOf="@+id/landmarkCountryText"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/landmarkCountryText"
        android:layout_width="249dp"
        android:layout_height="40dp"
        android:layout_marginBottom="105dp"
        android:gravity="center_vertical"
        android:text="Country Text"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landmarkNameText" />
</androidx.constraintlayout.widget.ConstraintLayout>